datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider      = "prisma-client-js"
  binaryTargets = "native"
}

model User {
  id   Int     @id @default(autoincrement())
  uuid String? @default(uuid())
  name String

  // Somecase we need fetch password (non hashed)
  password String

  email String @unique

  // dbAuth
  hashedPassword String @default("")
  salt           String @default("")

  // => Type: Text
  refreshToken String? @db.Text

  // => Roles: as a admin or customer
  user_type String

  created_at DateTime? @default(now())
  updated_at DateTime?

  phone_number String?
  address      String?

  customer Customer[]
  vehicle  Vehicle[]

  @@map("users")
}

model Vehicle {
  id Int @id @default(autoincrement())

  // => Is a plat number, like: DK 1..
  name      String
  serialNum String  @unique
  year      Int
  details   String?

  user_id Int
  user    User @relation(fields: [user_id], references: [id])

  created_by Int
  updated_by Int?

  created_at DateTime? @default(now())
  updated_at DateTime? @updatedAt

  schedule Schedule[]
  @@map("vehicle")
}

model Schedule {
  id           Int      @id @default(autoincrement())
  booking_date DateTime

  customer_id Int
  customer    Customer @relation(fields: [customer_id], references: [id])

  vehicle_id Int
  vehicle    Vehicle @relation(fields: [vehicle_id], references: [id])

  status  String? @default(value: "pending")
  message String?

  created_at DateTime? @default(now())
  updated_at DateTime? @updatedAt

  service Service[]
  @@map("schedule")
}

model Mechanic {
  id        Int     @id @default(autoincrement())
  person_id Int     @unique @db.MediumInt() // 16 digit for ktp
  name      String
  is_active Boolean @default(false)
  address   String?

  created_at DateTime? @default(now())
  updated_at DateTime? @updatedAt

  service   Service[]
  partsUsed PartUsed[]

  @@map("mechanic")
}

model Service {
  id   Int     @id @default(autoincrement())
  uuid String? @default(uuid())

  price Decimal? @db.Decimal(10, 2)

  created_by Int
  updated_by Int?

  mechanic_id Int
  mechanic    Mechanic @relation(fields: [mechanic_id], references: [id])

  schedule_id Int
  schedule    Schedule @relation(fields: [schedule_id], references: [id], onDelete: Cascade)

  created_at DateTime? @default(now())
  updated_at DateTime? @updatedAt

  partsUsed PartUsed[]

  @@map("services")
}

// => In
model Part {
  id          Int       @id @default(autoincrement())
  name        String
  part_number Int       @unique
  in_date     DateTime? @default(now())
  qty         Int
  price       Decimal   @db.Decimal(10, 2)
  description String?

  partsUsed PartUsed[]
  @@map("parts")
}

